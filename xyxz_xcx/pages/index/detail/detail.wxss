/* we7/pages/index/detail/detail.wxss */
.container {
  background: #ccc;
}
.header {
  padding: 30rpx;
  background: #fff;
}
.goods-name {
  font-size: 46rpx;
  font-weight: 600;
  padding-bottom: 20rpx;
}
.publish-information {
  display: flex;
  font-size: 22rpx;
  justify-content: space-between;
}
.content {
  margin-top: 10rpx;
  background: #fff;
  padding: 30rpx;
}
.content-item image {
  width: 200rpx;
  height: 200rpx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
}
.image-container {
  display: flex;
  flex-wrap: wrap;
}
.image-detail {
  font-size: 32rpx;
  color: #8f8b8b;
}
.content-information {
  display: flex;
  padding-top: 10rpx;
  flex-wrap: wrap;
}
.content-information .item-name {
  font-size: 32rpx;
  color: #8f8b8b;
  width: 180rpx;
}
.content-information .item-content {
  font-size: 32rpx;
  width: 500rpx;
}
.no-liuyan {
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
  font-size: 32rpx;
  color: #ccc;
}
.liuyan-contain {
  border-bottom: 1rpx #ccc solid;
}
.liu-yan-zhe {
  font-size: 34rpx;
}
.liu-yan-content {
  font-size: 28rpx;
  word-break:break-all;
}