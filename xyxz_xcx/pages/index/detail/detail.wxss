/* we7/pages/index/detail/detail.wxss */
.container {
  background: #ccc;
  position: relative
}
.header {
  padding: 30rpx;
  background: #fff;
}
.goods-name {
  font-size: 46rpx;
  font-weight: 600;
  padding-bottom: 20rpx;
}
.publish-information {
  display: flex;
  font-size: 22rpx;
  justify-content: space-between;
}
.content {
  margin-top: 10rpx;
  background: #fff;
  padding: 30rpx;
  position: relative;
}
.content-item image {
  width: 200rpx;
  height: 200rpx;
  padding-right: 10rpx;
  padding-bottom: 10rpx;
}
.image-container {
  display: flex;
  flex-wrap: wrap;
}
.image-detail {
  font-size: 32rpx;
  color: #8f8b8b;
}
.content-information {
  display: flex;
  padding-top: 10rpx;
  flex-wrap: wrap;
}
.content-information .item-name {
  font-size: 32rpx;
  color: #8f8b8b;
  width: 180rpx;
}
.content-information .item-content {
  font-size: 32rpx;
  width: 500rpx;
}
.no-liuyan {
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
  font-size: 32rpx;
  color: #ccc;
}
.liuyan-contain {
  border-bottom: 1rpx #ccc solid;
}
.liu-yan-zhe {
  font-size: 34rpx;
}
.liu-yan-content {
  font-size: 28rpx;
  word-break:break-all;
}
.finish {
  width: 180rpx;
  height: 60rpx;
  /* margin: 0; */
  font-size: 24rpx;
  color: #fff;
  background: #1AAD19;
  margin-right: 20rpx;
  position: absolute;
  top: 20rpx;
  right: 18rpx;
}
.isChecked {
    background-color: #039608;
}
.post-message {
  position:absolute;
  top:0;
  height:100%;
  width:100%;
  background:rgba(0,0,0,.4);
  margin-top:10rpx;
  /* background:#fff; */
  padding: 0;

}
.post-message .content-information {
  background: #fff;
  padding: 10rpx;
}
.post-message .input {
  font-size:30rpx;
}
.post {
  width: 180rpx;
  height: 60rpx;
  /* margin: 0; */
  font-size: 24rpx;
  color: #fff;
  background: #1AAD19;
  margin-right: 20rpx;
  /* position: absolute; */
  /* top: 20rpx; */
  /* right: 18rpx; */
}